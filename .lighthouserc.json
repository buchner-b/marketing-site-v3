{
    "ci": {
        "collect": {
            "staticDistDir": "./out",
            "url": [
                "/"
            ],
            "numberOfRuns": 3,
            "settings": {
                "chromeFlags": "--headless --no-sandbox --disable-gpu"
            }
        },
        "assert": {
            "assertions": {
                "categories:performance": [
                    "error",
                    {
                        "minScore": 0.95
                    }
                ],
                "categories:accessibility": [
                    "error",
                    {
                        "minScore": 1
                    }
                ],
                "categories:seo": [
                    "error",
                    {
                        "minScore": 1
                    }
                ],
                "categories:best-practices": [
                    "error",
                    {
                        "minScore": 1
                    }
                ]
            }
        },
        "upload": {
            "target": "temporary-public-storage"
        }
    }
}